<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>57.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Add records to Junction Object</masterLabel>
    <description>My custom LWC component.</description>
	
	<targets>
		<target>lightning__RecordPage</target>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__Tab</target>
		<target>lightning__Inbox</target>
		<target>lightning__RecordAction</target>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
		<target>lightningCommunity__Page_Layout</target>
		<target>lightningCommunity__Theme_Layout</target>
	</targets>

	<targetConfigs>

        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
		 <property name="titleName" type="String" label="Titile" default="" required="true" placeholder="Please Enter Component Title"/>
		  <property name="Label" type="String" label="Search Label" default="" required="true" />
            <property name="objectName" type="String" label="Object to Search Records" default="" required="true" placeholder="Please Enter Secondary Object Name"/>
			 <property name="fieldName" type="String" label="Display Search Field" default="" required="true"/>
			  <property name="junctionObject" type="String" label="Junction Object" default="" required="true" placeholder="Please Enter Junction Object Name"/>
			  <property name="parentIdApi" type="String" label="Primary field API" default="" required="true" placeholder="Please Enter Parent 1 Api Name"/>
			  <property name="childIdApi" type="String" label="Secondary field API" default="" required="true" placeholder="Please Enter Parent 2 Api Name"/>
			 <property name="iconName" type="String" label="Icon Name" default=""  placeholder="Please Enter Icon Name(standard:account)"/>
			  
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>